{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*", "../src/single.ts",
  ],
  // "files": [
  //   "src/index.ts",
  //   "src/js/module.d.ts"
  // ]
}
